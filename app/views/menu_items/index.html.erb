<p id="notice"><%= notice %></p>

<h1>Menu Items</h1>

<div class="container">
<div class="row">
  <% @menu_items.each do |menu_item| %>

    <div class="col-sm-6 col-lg-4">
      <div class="card text-center">
        <div class="card block">
          <h4 class="card-title"><%= menu_item.title %></h4>
          <p class="card-text"><%= menu_item.description %></p> 
          <p class="card-text"><%= menu_item.price %></p>
          <p class="card-text"><%= menu_item.type %></p>
          <p class="card-text"><%= menu_item.label %></p>
        </div>
      </div>
    </div>
        <%= link_to( 'Edit', edit_menu_item_path(menu_item)) %>
    <%= link_to 'Destroy', menu_item_path(menu_item), method: :delete, data: { confirm: 'Are you sure?' } %>

  <% end %>
</div>
</div>
<br>

<%= link_to 'New Menu Item', new_menu_item_path %>
