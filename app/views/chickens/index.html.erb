<p id="notice"><%= notice %></p>

<h1>Chickens</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chickens.each do |chicken| %>
      <tr>
        <td><%= chicken.title %></td>
        <td><%= chicken.description %></td>
        <td><%= chicken.price %></td>
        <td><%= link_to 'Show', chicken %></td>
        <td><%= link_to 'Edit', edit_chicken_path(chicken) %></td>
        <td><%= link_to 'Destroy', chicken, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chicken', new_chicken_path %>
