<p id="notice"><%= notice %></p>

<h1>Dessert Menu</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @desserts.each do |dessert| %>
      <tr>
        <td><%= dessert.title %></td>
        <td><%= dessert.description %></td>
        <td><%= dessert.price %></td>
        <td><%= link_to 'Show', dessert %></td>
        <td><%= link_to 'Edit', edit_dessert_path(dessert) %></td>
        <td><%= link_to 'Destroy', dessert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dessert', new_dessert_path %>
