<h1>Bisteks (Steaks)</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steaks.each do |steak| %>
      <tr>
        <td><%= steak.title %></td>
        <td><%= steak.description %></td>
        <td><%= steak.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>