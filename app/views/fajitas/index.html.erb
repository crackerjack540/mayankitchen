<p id="notice"><%= notice %></p>

<h1>Fajitas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fajitas.each do |fajita| %>
      <tr>
        <td><%= fajita.title %></td>
        <td><%= fajita.description %></td>
        <td><%= fajita.price %></td>
        <td><%= link_to 'Show', fajita %></td>
        <td><%= link_to 'Edit', edit_fajita_path(fajita) %></td>
        <td><%= link_to 'Destroy', fajita, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

