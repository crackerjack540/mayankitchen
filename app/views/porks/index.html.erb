<p id="notice"><%= notice %></p>

<h1>Porks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @porks.each do |pork| %>
      <tr>
        <td><%= pork.title %></td>
        <td><%= pork.description %></td>
        <td><%= pork.price %></td>
        <td><%= link_to 'Show', pork %></td>
        <td><%= link_to 'Edit', edit_pork_path(pork) %></td>
        <td><%= link_to 'Destroy', pork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pork', new_pork_path %>
