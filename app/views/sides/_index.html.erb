<p id="notice"><%= notice %></p>

<h1>Side Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sides.each do |side| %>
      <tr>
        <td><%= side.title %></td>
        <td><%= side.description %></td>
        <td><%= side.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

