<p id="notice"><%= notice %></p>

<h1>Ensaladas (Salads)</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salads.each do |salad| %>
      <tr>
        <td><%= salad.title %></td>
        <td><%= salad.description %></td>
        <td><%= salad.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

