<head>
<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

  <meta name="viewport" content="width=device-width, initial-scale=1">

<%= render 'layouts/header' %>
</head>
<body>

<%= image_tag 'mayan-logo.jpg', class: 'logo-home' %>

<div class="container">
    <div class="carousel">
      <div><%= image_tag 'carousel01.jpg', class: 'img-fluid' %></div>
      <div><%= image_tag 'carousel02.jpg', class: 'img-fluid' %></div>
      <div><%= image_tag 'carousel03.jpg', class: 'img-fluid' %></div>
    </div>

    <script type="text/javascript">
      $(document).ready(function(){
        $('.carousel').slick({
            infinite: true,
            autoplay: true,
            autoplaySpeed: 5000,
            fade: true,
            slidesToShow: 1,
            adaptiveHeight: true
        });
      });
    </script>
</div>

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6"><%= image_tag 'mayan-logo.jpg' %>
  </div>
</div>

<div class="row">

    <div class="col-sm-3">
                <h4 class="menu-head">Visit Us!</h4>

      <div class="card text-center">
        <div class="card block">
          <p class="card-text">507 Broad Street
Chattanooga, TN 37402</p>

        </div>
      </div>
    </div>


    <div class="col-sm-3">
      <div class="card text-center">
        <div class="card block">
          <h4 class="menu-head">Hours</h4>
          <h5>Mon - Thur</h5>
          <h6>11AM - 10PM</h6>
          <h5 class="hours">Friday</h5>
          <h6>11AM - 12AM</h6>
          <h5 class="hours">Saturday</h5>
          <h6>10AM - 12AM</h6>
          <h5 class="hours">Sunday</h5>
          <h6>10AM - 10PM</h6>

        </div>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="card text-center">
        <div class="card block">
          <h4 class="menu-head">Call Us!</h4>
          <a class="btn btn-danger btn-xlg" href="tel:423-682-7835" style="padding:15px;">
          Call <span class="glyphicon glyphicon-earphone" style="padding-left:0px; padding-right:0px;"></span>423-682-7835
          </a>
          <p class="menu-head">Join Our Team!</p>
          <%= link_to "Apply Now", apply_path, class: "btn btn-danger" %>


        </div>
      </div>
    </div>


    <div class="col-sm-3">
      <div class="card text-center">
        <div class="card block">
          <h4 class="menu-head">Follow Us!</h4>
    <div class="container">
    <%= image_tag 'facebook.png' %>
    <%= image_tag 'twitter.png' %>
  </div>
        </div>
      </div>
    </div>

</div>
</body>