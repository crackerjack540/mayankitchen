<h1 class="menu-title">Postres (Desserts)</h1>


<div class="container">
	<div class="row">
  <% @desserts.each do |dessert| %>

    <div class="col-sm-6 col-lg-4">
      <div class="card text-center">
        <div class="card block">
          <h4 class="card-title"><%= dessert.title %></h4>
          <p class="card-text"><%= dessert.description %></p>
          <p class="card-footer"> $<%= dessert.price %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>