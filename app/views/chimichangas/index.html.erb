<p id="notice"><%= notice %></p>

<h1>Chimichangas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chimichangas.each do |chimichanga| %>
      <tr>
        <td><%= chimichanga.title %></td>
        <td><%= chimichanga.description %></td>
        <td><%= chimichanga.price %></td>
        <td><%= link_to 'Show', chimichanga %></td>
        <td><%= link_to 'Edit', edit_chimichanga_path(chimichanga) %></td>
        <td><%= link_to 'Destroy', chimichanga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

