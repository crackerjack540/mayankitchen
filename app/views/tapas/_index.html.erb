
<h1>Tapas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tapas.each do |tapa| %>
      <tr>
        <td><%= tapa.title %></td>
        <td><%= tapa.description %></td>
        <td><%= tapa.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>