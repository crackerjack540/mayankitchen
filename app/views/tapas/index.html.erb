<p id="notice"><%= notice %></p>

<h1>Tapas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tapas.each do |tapa| %>
      <tr>
        <td><%= tapa.title %></td>
        <td><%= tapa.description %></td>
        <td><%= tapa.price %></td>
        <td><%= link_to 'Show', tapa %></td>
        <td><%= link_to 'Edit', edit_tapa_path(tapa) %></td>
        <td><%= link_to 'Destroy', tapa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tapa', new_tapa_path %>
